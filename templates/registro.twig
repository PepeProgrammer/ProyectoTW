{% extends 'origin.twig' %}

    {% block style %}
        {{ parent() }}
        <link rel="stylesheet" href="../css/registro.css">
    {% endblock %}

    {% block main %}
        <main>
            <h1>Registro de usuarios</h1>
            <form action="../pages/registro.php" method="post" enctype="multipart/form-data" novalidate>
                <h2>Datos personales</h2>
                <div class="datos_personales">

                    <div class="inputs">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="nombre" value="{{ nombre }}" {{ confirmacion }}>
                        {{ error_nombre }}
                    </div>

                    <div class="inputs">
                        <label for="apellidos">Apellidos:</label>
                        <input type="text" id="apellidos" name="ape" value="{{ ape }}" {{ confirmacion }}>
                        {{ error_apellidos }}
                    </div>

                    <div class="inputs">
                        <label for="DNI">DNI:</label>
                        <input type="text" id="DNI" name="DNI" value="{{ DNI }}" {{ confirmacion }}>
                        {{ error_DNI }}
                    </div>

                    <div class="inputs">
                        <label for="tarjeta">Número tarjeta de crédito:</label>
                        <input type="text" id="tarjeta" name="tarjeta" value="{{ tarjeta }}" {{ confirmacion }}>
                        {{ error_tarjeta }}
                    </div>
                </div>

                <h2>Datos de acceso</h2>
                <div class="datos_acceso">
                    <div class="inputs">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" value="{{ email }}" {{ confirmacion }}>
                        {{ error_email }}
                    </div>

                    <div class="inputs">
                        <label for="clave">Clave:</label>
                        <input type="password" id="clave" name="clave" placeholder="Escriba la clave" value="{{ clave }}" {{ confirmacion }}>
                    </div>

                    <div class="inputs">
                        <label for="clave2">Repita la clave:</label>
                        <input type="password" id="clave2" name="clave2" placeholder="Escriba la misma clave" value="{{ clave2 }}" {{ confirmacion }}>
                        {{ error_clave }}
                    </div>
                </div>

                <input type="submit" name="enviar" value="{{ texto_boton }}" id="enviar"/>
            </form>
        </main>
    {% endblock %}